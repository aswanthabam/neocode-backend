# Django Settings
# ===============

# Django Secret Key (Generate a new one for production)
SECRET_KEY=django-insecure-njee6zl+-^-pguefna_5wvq-xyytdm&&sm(%4n9j&_23(q0%+s

# Debug Mode (Set to False in production)
DEBUG=True

# Allowed Hosts (Add your domain in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# ================

# SQLite (Development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production - Uncomment and configure)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Google OAuth Settings
# ====================

# Google OAuth Client ID (Get from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here

# Google OAuth Client Secret (Get from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here

# Google OAuth Redirect URI
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback/

# JWT Settings
# ============

# JWT Access Token Lifetime (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60

# JWT Refresh Token Lifetime (in days)
JWT_REFRESH_TOKEN_LIFETIME=1

# CORS Settings
# =============

# CORS Allowed Origins (Add your frontend domain in production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CORS Allow All Origins (Development only - set to False in production)
CORS_ALLOW_ALL_ORIGINS=True

# Email Settings (Optional)
# ========================

# Email Backend (For password reset, etc.)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (Production)
# =============================

# HTTPS Settings (Set to True in production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Session Settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging Settings
# ================

# Log Level
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/django.log

# Redis Settings (Optional - for caching and session storage)
# =========================================================

# Redis URL (Uncomment if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Cache Settings
# ==============

# Cache Backend (Default: database)
CACHE_BACKEND=django.core.cache.backends.db.DatabaseCache

# Static Files Settings
# ====================

# Static Files URL
STATIC_URL=/static/

# Static Files Root
STATIC_ROOT=staticfiles/

# Media Files Settings
# ===================

# Media Files URL
MEDIA_URL=/media/

# Media Files Root
MEDIA_ROOT=media/

# API Settings
# ============

# API Version
API_VERSION=v1

# API Base URL
API_BASE_URL=http://localhost:8000/api/

# Rate Limiting
# =============

# Rate Limit Requests per Hour
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Rate Limit Requests per Minute
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Development Settings
# ===================

# Development Server Host
DEV_SERVER_HOST=127.0.0.1

# Development Server Port
DEV_SERVER_PORT=8000

# Auto Reload (Development)
AUTO_RELOAD=True

# Production Settings
# ==================

# Production Server
PRODUCTION_SERVER=gunicorn

# Number of Workers
WORKERS=4

# Timeout Settings
TIMEOUT=30

# Environment
ENVIRONMENT=development 